#!/data/data/com.termux/files/usr/bin/bash

clear

# ===== CYBER INSTALL HEADER =====
echo -e "\e[1;32m██████╗ ██╗███████╗██╗  ██╗ ██████╗ ███████╗████████╗"
echo "██╔══██╗██║╚══███╔╝██║  ██║██╔═══██╗██╔════╝╚══██╔══╝"
echo "██████╔╝██║  ███╔╝ ███████║██║   ██║███████╗   ██║   "
echo "██╔══██╗██║ ███╔╝  ██╔══██║██║   ██║╚════██║   ██║   "
echo "██████╔╝██║███████╗██║  ██║╚██████╔╝███████║   ██║   "
echo "╚═════╝ ╚═╝╚══════╝╚═╝  ╚═╝ ╚═════╝ ╚══════╝   ╚═╝   "
echo -e "\e[0m"

echo -e "\e[1;35m━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━\e[0m"
echo -e "\e[1;36m      BIZHOST INSTALLATION\e[0m"
echo -e "\e[1;31m      SECURITY MODE : ENABLED\e[0m"
echo -e "\e[1;35m━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━\e[0m"
echo ""

sleep 1

# ===== BOOT SEQUENCE =====
echo -e "\e[1;32m[+] Initializing package manager...\e[0m"
sleep 0.6

echo -e "\e[1;32m[+] Checking system integrity...\e[0m"
sleep 0.6

echo -e "\e[1;32m[+] Establishing secure repository links...\e[0m"
sleep 0.6

echo -e "\e[1;32m[+] Preparing installation environment...\e[0m"
sleep 0.6

echo ""
sleep 0.5

# ===== REAL INSTALL =====
pkg update -y
pkg install php cloudflared -y

echo ""
echo -e "\e[1;33m[!] Grant storage permission (Allow it)...\e[0m"
termux-setup-storage

SITE="/storage/emulated/0/BIZHOST"
mkdir -p "$SITE"

echo -e "\e[1;32m[+] Creating hosting directory...\e[0m"
sleep 0.5

cat > "$SITE/index.php" << 'EOF'
<?php
echo "<h1>BIZHOST SERVER ACTIVE</h1>
<p>Made by @bizft — BIZ FACTORY</p>";
?>
EOF

echo -e "\e[1;32m[+] Deploying server files...\e[0m"
sleep 0.5

chmod +x bizhost
cp bizhost $PREFIX/bin/

echo ""
echo -e "\e[1;32m[✔] INSTALLATION COMPLETE\e[0m"
echo -e "\e[1;36mRoot Directory: $SITE\e[0m"
echo ""
echo -e "\e[1;33mRun command → bizhost\e[0m"
